@page
@model EFReservation.Pages.ReservationListModel
@{
    ViewData["Title"] = "Reservation List";
}

<h1>Reservation List</h1>

<p>
    <a asp-page="./ReservationCreate">Create New Reservation</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservations[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservations[0].Room.RoomName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservations) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
