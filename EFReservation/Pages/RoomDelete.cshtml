@page "{id:int}"
@model EFReservation.Pages.RoomDeleteModel
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Name
        </dt>
        <dd class="col-sm-10">
            @Model.Room.RoomName
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Room.Capacity
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Room.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./RoomList" class="btn btn-secondary">Back to List</a>
    </form>
</div>
